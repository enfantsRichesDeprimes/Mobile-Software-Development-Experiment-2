<view class="container">
  <picker mode="region" bindchange='onPickerChange'>
    <view>{{region}}</view>
  </picker>
  <text>{{now.temp}}℃{{now.text}}</text>
  <image src="../images/QWeather-Icons-1.4.0/icons/{{now.icon}}.svg" mode="widthFix"></image>
  <view class="detail">
    <view class="bar">
    <view class="box">温度</view>
    <view class="box">气压</view>
    <view class="box">能见度</view>
  </view>
  <view class="bar">
    <view class="box">{{now.temp}}</view>
    <view class="box">{{now.pressure}}</view>
    <view class="box">{{now.vis}}</view>
  </view>
  <view class="bar">
    <view class="box">风向</view>
    <view class="box">风速</view>
    <view class="box">风力</view>
  </view>
  <view class="bar">
    <view class="box">{{now.windDir}}</view>
    <view class="box">{{now.windSpeed}}</view>
    <view class="box">{{now.windScale}}</view>
  </view>
  </view>
  
</view>